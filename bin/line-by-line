#!/usr/bin/env node

require = require('esm')(module /*, options*/);
let clis = require('../src/cli')
const options = clis.cli3(process.argv)
console.log(options)

const {readFileSync} = require('fs')
const path = require('path')
const fileName = options.template
console.log("template", fileName)

const content = readFileSync(path.resolve(process.cwd(), fileName), 'utf8').toString()
console.log("Content:")
const lines = content.split('\n')
console.log(lines)
console.log("Done.")
